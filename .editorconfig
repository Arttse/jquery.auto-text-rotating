# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

# HTML
[**.html]
indent_size = 4

# JavaScript
[**.js]
indent_size = 4

# JSON and Yaml
[{**.json,**.yml}]
indent_size = 2

# Markdown
[**.md]
indent_size = 2
trim_trailing_whitespace = false